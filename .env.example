# Neuromosaic Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file to version control

# API Keys for LLM Providers
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
COHERE_API_KEY=your_cohere_key_here

# Dataset Access
DATASET_API_KEY=your_dataset_key_here
HUGGINGFACE_TOKEN=your_hf_token_here

# Storage Configuration
# Optional: Override default storage location
STORAGE_ROOT=/path/to/storage
# Optional: Override default cache size limit
MAX_CACHE_SIZE=50GB
ARTIFACT_RETENTION_DAYS=30

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neuromosaic
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Container Configuration
DOCKER_REGISTRY=your_registry_url
CONTAINER_CPU_LIMIT=4
CONTAINER_MEMORY_LIMIT=8G
CONTAINER_GPU_LIMIT=1

# Monitoring & Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Enable Weights & Biases integration
ENABLE_WANDB=true
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=neuromosaic
WANDB_ENTITY=your_wandb_username

# Security
# For API authentication
AUTH_SECRET_KEY=your_secret_key_here
# For sensitive data encryption
ENCRYPTION_KEY=your_encryption_key

# Development Settings
# Enable debug mode
DEBUG=false
# Options: development, staging, production
ENVIRONMENT=production